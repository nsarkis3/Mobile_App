<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.SetUpLines"
             Title="SetUpLines">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Line: " />
            <Entry x:Name="LineName" Placeholder="Name"/>
        </HorizontalStackLayout>
        <Label Text="Player:"/>
        <ListView x:Name="lv" HeightRequest="200" ItemSelected="lv_ItemSelected"/>
        <Button x:Name="AddPlayer" Text="Add Player" Clicked="AddPlayer_Clicked"/>
        <HorizontalStackLayout>
            <Button x:Name="Clear" Text="Clear"/>
            <Button x:Name="Delete" Text="Delete" Clicked="Finish_Clicked"/>
            <Button x:Name="Save" Text="Save" Clicked="Finish_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>