<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SymptomTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SymptomTracker"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <ShellContent ContentTemplate="{DataTemplate local:EditItem}" Route="EditItem" />
    <ShellContent ContentTemplate="{DataTemplate local:DatePopup}" Route="DatePopup" />
    <ShellContent ContentTemplate="{DataTemplate local:TimePopup}" Route="TimePopup" />

</Shell>
